<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_yellow"
    >
    <ImageView
        android:id="@+id/data_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="@dimen/sixty"
        android:contentDescription="@null" />
    <TextView
        android:id="@+id/data_ratings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginLeft="@dimen/ten"
        android:layout_marginTop="@dimen/one"
        android:layout_marginStart="@dimen/ten"
        android:textColor="@color/brown_text"
        />
    <TextView
        android:id="@+id/data_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginLeft="@dimen/ten"
        android:layout_marginTop="@dimen/one"
        android:layout_marginStart="@dimen/ten"
        android:textColor="@color/brown_text"
        />
    <TextView
        android:id="@+id/data_decription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginLeft="@dimen/ten"
        android:layout_marginTop="@dimen/one"
        android:layout_marginStart="@dimen/ten"
        android:textColor="@color/brown_text"
        android:layout_marginBottom="10dp"
        />
</LinearLayout>